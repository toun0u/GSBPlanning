{% extends "SioGsbBundle:Default:layout.html.twig" %}

{% block title %}{{ parent() }} GSB Planning - Ajout{% endblock %}

{% block content %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/detailEvent.css') }}"
          xmlns="http://www.w3.org/1999/html">
    <div id="bloc_formulaire">
    <form name="addEvent" method="POST" action="{{ path('sio_gsb_toaddEvent') }}">

        <br>

        <div id="titre">
            <div id="titre_modification_event" style="font-size: 24px;">Ajout Événements</div>
        </div>

        <br>

        <input type="hidden" name="user" value="{{ app.session.get('user') }}">

        <div id="input">
            <div id="text">
                Lieu :<input type="text" name="lieu" value="">
            </div>
        </div>
        <div id="input">
            <div id="text">
                Libellé :<input type="text" name="libelle" value="">
            </div>
        </div>

        <div id="input">
            <div id="text">
                Description :<input type="text" name="description" value="">
            </div>
        </div>

        <div id="input">
            <div id="date">
                Date Début :<input type="date" name="dateDebut" value="">
            </div>
        </div>

        <div id="input">
            <div id="date">
                Date Fin :<input type="date" name="dateFin" value="">
            </div>
        </div>

        <div id="input">
            <div id="time">
                Heure Début :<input type="time" name="heureDebut" value="">
            </div>
        </div>

        <div id="input">
            <div id="time">
                Heure Fin :<input type="time" name="heureFin" value="">
            </div>
        </div>

        <div id="select">
            <select name="titre">
                {% for type in lesTypes %}
                    <option value="{{ type.id }}">{{ type.titre }}</option>
                {% endfor %}

            </select>
        </div>

        <div id="input">
            <div id="submit">
                <input type="submit" name="ajouter" value="Ajouter">
            </div>
        </div>
    </form>
    <form name="retour" method="POST" action="{{ path('sio_gsb_calendaradmin') }}">
        <div id="input">
            <div id="submit">
                <input type="submit" name="retour" value="Annuler">
            </div>
        </div>
    </form>


{% endblock %}